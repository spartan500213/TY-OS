+int sys_lseek(void) {
+    struct file *f;
+    int fd;
+    int offset;
+    int whence;
+    uint new_offset;
+
+    //fetch arguments from userstack
+    if(argint(0, &fd) < 0 || argint(1, &offset) < 0 || argint(2, &whence) < 0)
+        return -1;
+
+    //fetch the file struct for the given fd
+    f = myproc()->ofile[fd];
+    if(f == 0) 
+        return -1;
+
+    if(f->type != FD_INODE)
+        return -1;
+
+    switch(whence) {
+        case SEEK_SET:
+            new_offset = offset;
+            break;
+        case SEEK_CUR:
+            new_offset = f->off + offset;
+            break;
+        case SEEK_END:
+            new_offset = f->ip->size + offset;
+            break;
+        default:
+            return -1;
+    }
+
+    //offset greater than file size
+    if(new_offset < 0 || new_offset > f->ip->size) {
+        return -1;
+    }
+
+    f->off = new_offset;
+
+    return f->off;
+}
